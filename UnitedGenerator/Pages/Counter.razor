@page "/counter"
@using UnitedGenerator.Data;
@using UnitedGenerator.Engine;

<PageTitle>Counter</PageTitle>



<h1>Game</h1>

<button class="btn btn-primary" @onclick="IncrementCount">Generate</button>

@if (game != null)
{
    <h2>Villain</h2>
    <div>@game.Villain.Name (@game.Villain.Box.Name - Season @game.Villain.Season.Number)</div>

    <h3>Challenge</h3>
    @if (game.Challenge != null)
    {
        <div>@game.Challenge.Name (@game.Challenge.Box.Name - Season @game.Challenge.Season.Number)</div>
    }
    else
    {
        <div>(None)</div>
    }

    <h2>Heroes</h2>
    <ul>
        @foreach (var hero in game.Heroes)
        {
            <li>@hero.Name (@hero.Box.Name - Season @hero.Season.Number)</li>
        }
    </ul>

    <h2>Locations</h2>
    <ul>
        @foreach (var location in game.Locations)
        {
            <li>@location.Name (@location.Box.Name - Season @location.Season.Number)</li>
        }
    </ul>
}

@code {
    private GameRandomizer random = new GameRandomizer();

    private GameSetup? game = null;

    private void IncrementCount()
    {
        game = random.Generate(4);
    }
}
