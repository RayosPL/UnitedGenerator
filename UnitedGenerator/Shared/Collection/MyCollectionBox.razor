@inject MyCollectionService myCollection;

@if (Box != null)
{
    <div class="pt-5">
        <div class="row">
            <div class="col-auto">
                <h3>Season @Box.Season.Number: @Box.Name <span class="badge @BadgeClass">@Status</span></h3>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-auto">
                <button class="btn btn-info" @onclick="Toggle"><span class="oi @ToogleText" aria-hidden="true"></span></button>
            </div>
            <div class="col-auto">
                <button class="btn btn-secondary" @onclick="() => SetState(Box, true)">Include Box</button>
            </div>
            <div class="col-auto">
                <button class="btn btn-secondary" @onclick="() => SetState(Box, false)">Exclude Box</button>
            </div>
        </div>

        <div class="row g-2 row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">

            @if (showItems)
            {
                @foreach (var item in Box.AllItems)
                {
                    <BoxItemCard Item="item" ShowBoxInfo="false">
                        <MyCollectionBoxItem Item="item" SelectionChanged="() => StateHasChanged()" />
                    </BoxItemCard>
                }
            }

        </div>
    </div>
}

@code {

    [Parameter]
    public IBox? Box { get; set; }

    private bool showItems = false;

    private string ToogleText => showItems ? "oi-caret-top" : "oi-caret-bottom";

    private string Status
    {
        get
        {
            bool? state = null;

            if (Box != null)
            {
                state = myCollection.IsBoxIncluded(Box);
            }

            switch(state)
            {
                case true: return "All included";
                case false: return "All excluded";
                case null: return "Some parts included";
            }
        }
    }

    private string BadgeClass
    {
        get
        {
            bool? state = null;

            if (Box != null)
            {
                state = myCollection.IsBoxIncluded(Box);
            }

            switch (state)
            {
                case true: return "bg-success";
                case false: return "bg-danger";
                case null: return "bg-warning";
            }
        }
    }

    private void SetState(IBox box, bool include)
    {
        myCollection.SetIncluded(box, include);
    }

    private void Toggle()
    {
        showItems = !showItems;
    }
}
