@using UnitedGenerator.Common;
@inject MyCollectionService myCollection;

<input class="form-check-input" checked="@included" type="checkbox" @onchange="OnChange" />

@code {
    [Parameter]
    public IBoxItem? Item { get; set; }

    private bool included;

    protected override void OnInitialized()
    {
        if (Item != null)
        {
            included = myCollection.IsIncluded(Item);
        }
    }

    private void OnChange(ChangeEventArgs e)
    {
        if (Item != null && e.Value is bool)
        {
            myCollection.SetIncluded(Item, (bool)e.Value);
        }
    }
}